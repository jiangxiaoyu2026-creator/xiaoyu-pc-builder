                    <span className="text-xs font-bold text-slate-600 truncate max-w-[80px]">{cfg.author}</span>
                  </div>
                  <div className={`font-extrabold text-xl ${theme.text}`}>Â¥{cfg.price}</div>
                </div>

                <div className="flex items-center gap-4 mt-4 pt-4 border-t border-slate-50 text-xs text-slate-400 font-medium">
                  <span className={`flex items-center gap-1.5 transition-colors ${cfg.isLiked ? 'text-pink-500' : 'group-hover:text-slate-600'}`}>
                    <ThumbsUp size={14} className={cfg.isLiked ? 'fill-current' : ''} /> {cfg.likes}
                  </span>
                  <span className="flex items-center gap-1.5 group-hover:text-slate-600 transition-colors">
                    <MessageSquare size={14} /> {cfg.comments}
                  </span>
                </div>
              </div>
            </div>
          );
        })}
      </div>

      {selectedConfig && (
        <ConfigDetailModal
          config={selectedConfig}
          onClose={() => setSelectedConfig(null)}
