          return (
            <div
              key={cfg.id}
              onClick={() => setSelectedConfig(cfg)}
              className={`group bg-white rounded-[24px] overflow-hidden shadow-sm hover:shadow-2xl hover:-translate-y-1.5 transition-all duration-300 flex flex-col cursor-pointer border-t-4 ${theme.border} border-l border-r border-b border-slate-100`}
            >
              {/* é¡¶éƒ¨åŒºåŸŸï¼šç¡¬ä»¶å±•ç¤º + æ ‡ç­¾ */}
              <div className={`h-36 relative flex flex-col items-center justify-center p-6 text-center ${theme.bg}`}>
                {/* å·¦ä¸Šè§’æ ‡ç­¾ */}
                <div className={`absolute top-4 left-4 ${theme.badge} text-[10px] font-extrabold px-2.5 py-1 rounded-md shadow-sm tracking-wider uppercase flex items-center gap-1`}>
                  {cfg.type === 'official' && <Crown size={10} />}
